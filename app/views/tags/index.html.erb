<h1>Mostrando Etiquetas</h1>
<%= link_to fa_icon('plus', text: 'Nueva etiqueta'), new_tag_path, class: 'btn btn-primary btn-lg pull-right' %>

<table class="table table-hover table-stripped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to fa_icon('search', text: 'Ver'), tag %></td>
        <td><%= link_to fa_icon('pencil', text: 'Editar'), edit_tag_path(tag) %></td>
        <td><%= link_to fa_icon('trash-o', text: 'Borrar'), tag, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

