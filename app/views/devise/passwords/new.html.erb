<h1>¿Olvidaste tu contraseña?</h1>

<%= form_for(
  resource,
  as: resource_name,
  url: password_path(resource_name),
  html: { method: :post },
  builder: IdeonFormBuilder) do |f| %>
  <%= devise_error_messages! %>

  <%= f.container do %>
    <%= f.label_email_field :email, autofocus: true %>
  <% end %>

  <div class="actions">
    <%= f.submit "Enviarme instrucciones para reestablecer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
