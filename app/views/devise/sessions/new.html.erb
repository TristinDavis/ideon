<h1>Iniciar sesión</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), builder: IdeonFormBuilder) do |f| %>
  <%= f.container do %>
    <%= f.label_email_field :email, autofocus: true %>
  <% end %>

  <%= f.container do %>
    <%= f.label_password_field :password, autocomplete: "off" %>
  <% end %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %>
  <% end -%>

  <div class="actions">
    <%= f.submit "Iniciar sesión" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
