<%= form_for(@note, builder: IdeonFormBuilder) do |f| %>
  <%= render 'shared/errors', object: @note %>

  <%= f.container do %>
    <%= f.label_text_field :title %>
  <% end %>

  <%= f.container do %>
    <%= f.label_text_area :body %>
  <% end %>

  <%= f.check_box :favorite %>

  <%= f.check_box :status %>

  <%= f.submit %>
<% end %>
